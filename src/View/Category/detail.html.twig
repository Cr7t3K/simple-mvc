{% extends "layout.html.twig" %}

{% block content %}
    <h1 class="text-center">Detail</h1>
    <div class="row">
        {% for drink in drinks %}
            <div class="col-4">
                <div class="card mt-2">
                    <img src="{{ drink.picture }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ drink.name }}</h5>
                        <p class="card-text">{{ drink.description }}</p>
                        <a
                                href="/favorite/add/{{ drink.id }}"
                                class="btn btn-primary"
                        >
                            <i class="fas fa-heart {{ drink.id in session.favorite ? "font-pink" }}"></i>favorite
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}