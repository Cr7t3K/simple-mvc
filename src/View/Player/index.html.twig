{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Player</th>
                <th scope="col">Position</th>
                <th scope="col">Team</th>
            </tr>
            </thead>
            <tbody>
                {% for player in players %}
                    <tr>
                        <td>{{ player.playerName }}</td>
                        <td>{{ player.position }}</td>
                        <td>{{ player.teamName }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}